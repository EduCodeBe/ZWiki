<div i18n:domain="zwiki">
<a name="ratingform"></a>
<form method="POST" id="ratingform" 
      tal:define="myvote python:here.myVote(request); rating here/rating"
      tal:attributes="
        action string:${here/pageUrl}/vote;
        class here/ratingStyle;
        "
      >
  <span i18n:translate="">page rating</span>: 
  <b><span tal:replace="here/rating" /></b> 
  <span i18n:translate="">from</span> 
  <span tal:replace="here/voteCount" /> <span i18n:translate="">votes</span><br>
  <input type="submit" name="score:int" 
         tal:condition="python:0 #no good, leaves space between" 
         tal:repeat="v python:['-1','0','+1','+2','+3']"
         tal:attributes="
         value v;
         style python:(myvote == int(v)) and 'font-weight:bold' or '';
         "/>
  <input 
   type="submit" name="score:int" value="-1"
   tal:attributes="style python:(myvote == -1) and 'font-weight:bold' or ''"
   /><input type="submit" name="score:int" value="0"
   tal:attributes="style python:(myvote ==  0) and 'font-weight:bold' or ''"
   /><input type="submit" name="score:int" value="+1"
   tal:attributes="style python:(myvote == +1) and 'font-weight:bold' or ''"
   /><input type="submit" name="score:int" value="+2"
   tal:attributes="style python:(myvote == +2) and 'font-weight:bold' or ''"
   /><input type="submit" name="score:int" value="+3"
   tal:attributes="style python:(myvote == +3) and 'font-weight:bold' or ''"
   /><br>
  <span i18n:translate="">click to rate (voting as</span>: 
  <span tal:replace="python:here.usernameFrom(request)" />)
</form>
</div>
